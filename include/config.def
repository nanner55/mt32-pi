// Config option definition file.
// Format: CFG(<INI name>, <type>, <class member name>, <default value>, <extra parser function args>...)

#ifndef BEGIN_SECTION
#define BEGIN_SECTION(SECTION)
#endif

#ifndef CFG
#define CFG(INI_NAME, TYPE, MEMBER_NAME, DEFAULT, ...)
#endif

#ifndef END_SECTION
#define END_SECTION
#endif

BEGIN_SECTION(midi)
CFG(usb,					bool,						m_bMIDIUSB,					true									)
CFG(gpio_baud_rate,			int,						m_nMIDIGPIOBaudRate,		31250									)
CFG(gpio_thru,				bool,						m_bMIDIGPIOThru,			false									)
END_SECTION

BEGIN_SECTION(audio)
CFG(output_device,			TAudioOutputDevice,			m_AudioOutputDevice,		TAudioOutputDevice::PWM					)
CFG(sample_rate,			int,						m_nAudioSampleRate,			96000									)
CFG(chunk_size,				int,						m_nAudioChunkSize,			512										)
CFG(i2c_dac_address,		int,						m_nAudioI2CDACAddress,		0x4c,							true	)
CFG(i2c_dac_init,			TAudioI2CDACInit,			m_AudioI2CDACInit,			TAudioI2CDACInit::None					)
END_SECTION

BEGIN_SECTION(mt32emu)
CFG(resampler_quality,		TMT32EmuResamplerQuality,	m_MT32EmuResamplerQuality,	TMT32EmuResamplerQuality::Good			)
CFG(midi_channels,			TMT32EmuMIDIChannels,		m_MT32EmuMIDIChannels,		TMT32EmuMIDIChannels::Standard			)
CFG(rom_set,				TMT32EmuROMSet,				m_MT32EmuROMSet,			TMT32EmuROMSet::MT32Old					)
END_SECTION

BEGIN_SECTION(lcd)
CFG(type,					TLCDType,					m_LCDType,					TLCDType::None							)
CFG(width,					int,						m_nLCDWidth,				20										)
CFG(height,					int,						m_nLCDHeight,				2										)
CFG(i2c_lcd_address,		int,						m_nLCDI2CLCDAddress,		0x3c,							true	)
END_SECTION

BEGIN_SECTION(network)
CFG(mode,					TNetworkMode,				mNetworkMode,				TNetworkMode::Off						)
CFG(dhcp,					bool,						mNetworkDHCP,				true									)
CFG(ip_address,				CIPAddress,					mNetworkIPAddress,			0xc0a80164								)
CFG(subnet_mask,			CIPAddress,					mNetworkSubnetMask,			0xffffff00								)
CFG(default_gateway,		CIPAddress,					mNetworkDefaultGateway,		0xc0a80101								)
CFG(dns_server,				CIPAddress,					mNetworkDNSServer,			0xc0a80101								)
END_SECTION

#undef BEGIN_SECTION
#undef CFG
#undef END_SECTION
